<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chenzhifei.wheelview.MainActivity">

    <TextView
        android:id="@+id/tv_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="yVelocity: "/>
    <TextView
        android:id="@+id/tv_x_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_x"
        android:text="-"/>
    <TextView
        android:id="@+id/tv_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tv_x"
        android:text="distanceY: "/>
    <TextView
        android:id="@+id/tv_y_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_y"
        android:layout_below="@+id/tv_x_value"
        android:text="-"/>
    <TextView
        android:id="@+id/tv_x_deg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tv_y"
        android:text="xDeg: "/>
    <TextView
        android:id="@+id/tv_x_deg_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_x_deg"
        android:layout_below="@+id/tv_y_value"
        android:text="-"/>
    <TextView
        android:id="@+id/tv_wheel_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tv_x_deg"
        android:text="wheelRadius: "/>
    <TextView
        android:id="@+id/tv_wheel_radius_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_wheel_radius"
        android:layout_below="@+id/tv_x_deg_value"
        android:text="-"/>

    <com.chenzhifei.wheelview.view.WheelView
        android:id="@+id/wheel_view"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="#5777"/>

</RelativeLayout>
